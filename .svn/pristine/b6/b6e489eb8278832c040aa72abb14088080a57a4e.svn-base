<script type="text/javascript">
	var oTable = null;
	$(function() {
		path="${pageContext.request.contextPath}";
		dofilter();

		$("#checkAll").click(function() {
			if (this.checked) {
				$("input[name='checkList']").each(function() {
					this.checked = true;
				});
			} else {
				$("input[name='checkList']").each(function() {
					this.checked = false;
				});
			}
		});

		$('.close').click(function() {
			$('.athlete_detailed').hide();
			$("#default_photo_img").attr("src", "../images/defaultuser.png");
			$("#sltTCFCertificateA").hide();
			$("#sltCFACertificateA").hide();
			$('#fade').hide();
			dofilter();
			//$('.caipan_apply').hide();
		});
		
	    
		$("#button_change")
		.click(
				function() {
					ds.dialog({
						title : '消息提示',
						content : "确定修改教练员信息？",
						yesText : "确定",
						onyes : function() {
							$("#formCard").ajaxSubmit({
								 type: "POST",
							     url: "${pageContext.request.contextPath}/coachmanagement/modifycoach.html",
							     dataType: "json",
							     success: function(data){
							    	 if(data.success){
							    		 ds.dialog({
												title : '消息提示',
												content : data.returnMessage,
												onyes : true,
