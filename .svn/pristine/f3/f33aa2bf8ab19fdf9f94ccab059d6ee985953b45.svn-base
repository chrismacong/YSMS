*{
		margin:0;
		padding:0;
	}
	body{
		font-family: '微软雅黑','黑体';
		color:#fff;
		font-size: 1rem;
	}
	a{text-decoration: none}
	.header{
		height:100px;
		background: url(../images/btn_bg.png);
		background-size:100% 100%; 
	}
	.header div{
		float:left;
		height:55px;
		margin-top:25px;
	}
	.header img{
		height:100%;
		width:auto;
	}
	.header div:nth-child(1){
		width:10%;
		text-align: center;
	}
	.header div:nth-child(2){
		width:80%;
		text-align: center;
		font-size: 2.5em;
		font-weight: bolder;
	}
	.header div:nth-child(3){
		width:10%;
		text-align: center;
	}
	.headimg{
		width:20em;
		height:20em;
		margin: 10% auto 13% auto;
		border: 1px solid #0663b5;
		border-radius: 10em;
		overflow: hidden;
	}
	.headimg img{
		height:100%;
		width:100%;
	}
	.form_div{
		margin-top:30px;
		text-align: center;
	}
	input,select{
		width:66%;
		height:3.5em;
		border: 1px solid #0663b5;
		border-radius: 8px;
		margin:15px 0;
		line-height: 50px;
		padding:0 2%;
		font-size: 22px;
	}
	input:focus{
     outline:none;
     border:#87C6F9 1px solid;
     box-shadow: 0 0 8px rgba(103, 166, 217, 1);
    }
	input[type='button']{
		background: url(../images/btn_bg.png);
		background-size:100% 100%; 
		font-family: '微软雅黑','黑体';
		color:#fff;
		font-size:2.0em;
		width:70%;
	}
	input[type='button']:hover{
		background: url(../images/btn_bg_hover.png);
		background-size:100% 100%;
	}

	/*修改个人资料*/
	.info{
		color:#000;
		width:85%;
		padding:30px 0;
		margin:auto;
		border-bottom:1px solid #0663b5;
	}
	.form_div2{
		margin-top:100px;
		text-align: center;
	}
	.form_div2 span{
		width:45px;
		color:#000;
		display:inline-block;
		line-height: 65px
	}
	.form_div2 input[type='text'],.form_div2 input[type='number']{
		width:60%!important;
		text-align: left
	}
	.form_div2 select{
		width:55%!important;
	}
	td{
		height:50px;
		line-height: 50px;
		font-size:2em;
		text-align: center;
		padding: 15px 20px;
	}
	.title{
		color:#0663b5;
		font-size: 2.0em;
		text-align: center;
		padding:35px 0 20px 0;
		margin-top:100px;
	}
	/*验证提示*/
	.prompt{
		color:#f00;
		height:21px;
	}
